<odoo>
  <data>
      <record id="stock_location_form" model="ir.ui.view">
            <field name="name">stock.location.form.inherit</field>
            <field name="model">stock.location</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='additional_info']" position="after">
                    <group string="Operation Expenses" attrs="{'invisible':[('usage','not in',('inventory','production'))]}">
                        <field name="account_selection" options="{'no_create': True}"/>
                    </group>
                </xpath>
          </field>
      </record>
  </data>
</odoo>